<?xlm version="1.0" encoding="UTF-8"?>

<Configuration status = "WARN">
	<Appenders>
		<Console name="Cosnole" Target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c - %msg%n"/>
		</Console>
		
		<File name="FileLogger" fileName = "log/esempio.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level %c - %msg%n"/>
		</File>
	</Appenders>
	
	<Loggers>
		<Root level="Debug">
			<AppenderRef ref="Console"></AppenderRef>
			<AppenderRef ref="FileLogger"></AppenderRef>
		</Root>
	</Loggers>
</Configuration>